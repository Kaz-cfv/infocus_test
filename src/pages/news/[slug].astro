---
import Layout from '../../layouts/Layout.astro';
import Content from '../../components/news-detail/parts/Content.astro';
import Credit from '../../components/news-detail/section/Credit.astro';
import Share from '../../components/news-detail/parts/Share.astro';
import Related from '../../components/news-detail/section/Related.astro';

export async function getStaticPaths() {
  // カテゴリー情報を取得するヘルパー関数
  function getCategoryInfo(taxonomyNews) {
    if (!taxonomyNews || !Array.isArray(taxonomyNews) || taxonomyNews.length === 0) {
      return { name: 'News', slug: 'news' }; // デフォルト
    }

    // 最初のカテゴリー情報を使用（通常は1つのみ）
    const category = taxonomyNews[0];

    if (category && category.name && category.slug) {
      return { name: category.name, slug: category.slug };
    }

    // フォールバック
    return { name: 'News', slug: 'news' };
  }

  try {
    // 静的JSONファイルからニュースデータを取得
    const response = await fetch('https://infocus.wp.site-prev2.com/api/news.json');

    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }

    const newsData = await response.json();
    const newsArray = Array.isArray(newsData) ? newsData : [newsData];

    // 各ニュース記事のパスを生成
    return newsArray
      .filter(item => item.title && item.date && item.slug)
      .map((item) => {
        const categoryInfo = getCategoryInfo(item.taxonomy?.news);

        return {
          params: { slug: item.slug },
          props: {
            article: {
              id: item.id,
              slug: item.slug,
              title: item.title,
              date: new Date(item.date).toLocaleDateString('ja-JP', {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit'
              }).replace(/\//g, '.'),
              category: categoryInfo.name,        // 表示用カテゴリー名
              categorySlug: categoryInfo.slug,    // フィルタリング用スラッグ
              pic: item.acfs?.news_eyecatch?.url || item.acfs?.news_mv?.url,
              content: item.acfs?.news_article || '',
              rawContent: item.acf?.news_article || ''
            },
            relatedArticles: newsArray
              .filter(newsItem => newsItem.title && newsItem.date && newsItem.slug && newsItem.id !== item.id)
              .sort((a, b) => new Date(b.date) - new Date(a.date))
              .slice(0, 3)
              .map(relatedItem => {
                const relatedCategoryInfo = getCategoryInfo(relatedItem.taxonomy?.news);

                return {
                  id: relatedItem.id,
                  slug: relatedItem.slug,
                  title: relatedItem.title,
                  date: new Date(relatedItem.date).toLocaleDateString('ja-JP', {
                    year: 'numeric',
                    month: '2-digit',
                    day: '2-digit'
                  }).replace(/\//g, '.'),
                  category: relatedCategoryInfo.name,        // 表示用カテゴリー名
                  categorySlug: relatedCategoryInfo.slug,    // フィルタリング用スラッグ
                  pic: relatedItem.acfs?.news_eyecatch?.url || relatedItem.acfs?.news_mv?.url,
                  url: `/news/${relatedItem.slug}/`
                };
              })
          }
        };
      });
  } catch (error) {
    console.error('❌ Failed to generate static paths:', error);
    return [];
  }
}

const { article, relatedArticles } = Astro.props;

const pageMeta = {
  title: `${article.title} | NEWS`,
  description: article.content.replace(/<[^>]*>/g, '').substring(0, 150) + '...',
  ogpType: "article"
};
---

<Layout
  title=""
  pageName="news-detail"
  meta={pageMeta}
>

<article class="p-news-detial-article" data-main-content>
  {article.pic && (
    <div class="p-news-detial-article__pic">
      <figure>
        <img src={article.pic} alt={article.title} />
      </figure>
    </div>
  )}

  <section class="p-news-detial-article__about">
    <h1 class="p-news-detial-article__about-title">{article.title}</h1>
    <div class="p-news-detial-article__about-info">
      <time class="p-news-detial-article__about-date">{article.date}</time>
      <span class="p-news-detial-article__about-category">{article.category}</span>
    </div>
  </section>

  {article.content && (
    <section class="p-news-detial-article__content">
      <div class="c-article">
        <div set:html={article.content}></div>
      </div>
    </section>
  )}

  <Share
    slug={article.slug}
  />
</article>
<Related relatedArticles={relatedArticles} />

</Layout>

