<style lang="scss">
@use '../../../assets/scss/mediaquery' as me;
@use '../../../assets/scss/mixin' as mi;

.p-career-interview {
  display: grid;
  row-gap: 60px;
  padding-inline: 40px;
  padding-block: 100px;
  border-top: solid 2px var(--c-gray);
  @include me.sp {
    row-gap: 40px;
    padding-inline: 20px;
    padding-block: 80px;
  }

  &__title {
    font-size: 5.6rem;
    font-weight: 600;
    line-height: 0.96;
    letter-spacing: -0.02rem;
    @include me.sp {
      font-size: 3.4rem;
      line-height: 1.4;
    }
  }

  &__content {
    display: grid;
    row-gap: 50px;
    padding-block-end: 20px;
  }

  &__list {
    display: grid;
    row-gap: 50px;
    @include me.pc {
      grid-template-columns: repeat(3, 1fr);
      column-gap: 30px;
    }
  }

  &__list-item {
    &.is-hidden {
      display: none;
    }
  }

  &__btn {
    text-align: center;

    button {
      color: var(--c-white);
      font-size: 2rem;
      font-weight: 700;
      line-height: 1.4;
      letter-spacing: -0.02rem;
    }

    span {
      position: relative;

      &::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 1px;
        background-color: var(--c-white);
      }
    }
  }
}
</style>
