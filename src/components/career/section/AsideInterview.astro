---
// インタビューデータはクライアントサイド(Jobs.js)で取得・レンダリング
---

<aside class="p-jobs-aside">
  <h2 class="p-jobs-aside__title">STAFF INTERVIEW</h2>

  <div class="p-jobs-aside__content">
    <!-- インタビューカードは Jobs.js で動的に生成 -->
    <ul class="p-jobs-aside__list js-more-content">
      <!-- Cards will be rendered by Jobs.js -->
    </ul>
    <!-- VIEW ALL ボタンも Jobs.js で表示制御 -->
    <div class="p-jobs-aside__btn">
      <button class="js-more">
        <span>VIEW ALL</span>
      </button>
    </div>
  </div>
</aside>

<style lang="scss" is:global>
@use '../../../assets/scss/mediaquery' as me;
@use '../../../assets/scss/mixin' as mi;

.p-jobs-aside {
  border-top: solid 1px var(--c-white);
  @include me.pc {
    padding-block: 80px 100px;
  }
  @include me.sp {
    padding-block-start: 60px;
  }

  &__title {
    font-size: 2.6rem;
    font-weight: 600;
    line-height: 0.96;
    letter-spacing: -0.02rem;
    text-align: center;
    @include me.sp {
      font-size: 2.2rem;
    }
  }

  &__content {
    display: grid;
    row-gap: 50px;
    margin-block-start: 70px;
    @include me.sp {
      margin-block-start: 28px;
    }
  }

  &__list {
    display: grid;
    row-gap: 50px;
    padding-inline: 40px;
    @include me.pc {
      grid-template-columns: repeat(3, 1fr);
      column-gap: 30px;
    }
    @include me.sp {
      padding-inline: 20px;
    }
  }

  &__list-item {
    &.is-hidden {
      display: none;
    }
  }

  &__btn {
    padding-inline: 40px;
    @include me.pc {
      text-align: right;
    }
    @include me.sp {
      text-align: center;
    }

    button {
      color: var(--c-white);
      font-size: 2rem;
      font-weight: 700;
      line-height: 1.4;
      letter-spacing: -0.02rem;
    }

    span {
      position: relative;

      &::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 1px;
        background-color: var(--c-white);
      }
    }
  }
}

.c-interview-card {
  display: grid;
  row-gap: 12px;
  @include me.pc {
    &.mouse-over {
      &:hover {
        .c-interview-card__thumb {
          // 各辺から10px内側にクリップ（360px → 340px相当）
          clip-path: inset(7px);
        }

        .c-interview-card__thumb img {
          // 画像自体を拡大（360px → 368px相当）
          // transform: scale(1.0222); // 368/360 = 1.0222
        }
      }
    }
  }

  &__thumb {
    display: block;
    aspect-ratio: 340 / 192;
    clip-path: inset(0px);
    transition: clip-path .4s cubic-bezier(0.16, 1.02, 0.52, 1.03);

    img {
      transition: transform 0.3s cubic-bezier(0, 0, 0.17, 1);
    }
  }

  &__info {
    display: grid;
    row-gap: 10px;

    &-title {
      a {
        color: var(--c-white);
        font-size: 1.6rem;
        font-weight: 600;
        line-height: 1.7;
      }
    }

    &-staff {
      color: var(--c-white);
      font-size: 1.6rem;
      font-weight: 600;
      line-height: 1.7;
    }

    &-tags {
      display: flex;
      column-gap: 8px;

      li {
        display: flex;
        column-gap: 8px;
        color: rgba($color: #AAAAAA, $alpha: 0.9);
        font-size: 1.4rem;
        font-weight: 700;

        &:not(:last-child) {
          &::after {
            content: "/";
          }
        }

        a, span {
          color: rgba($color: #AAAAAA, $alpha: 0.9);
        }
      }
    }
  }
}
</style>
