---
interface Props {
  title: string;
  image?: string;
  name: string;
  position: string;
  url: string;
}

const { title, image, name, position, url } = Astro.props;

// ポジションを配列に分割（複数ポジションがスラッシュ区切りの場合）
const positions = position ? position.split('/').map(p => p.trim()) : [];
---

<div class="c-interview-card mouse-over">
  <a href={url} target="_blank" rel="noopener noreferrer" class="c-interview-card__thumb">
    <figure>
      <img src={image} alt={title}>
    </figure>
  </a>
  <div class="c-interview-card__info">
    <div class="c-interview-card__info-title">
      <a href={url} target="_blank" rel="noopener noreferrer">{title}</a>
    </div>
    {name && (
      <a href={url} target="_blank" rel="noopener noreferrer" class="c-interview-card__info-staff">{name}</a>
    )}
    {positions.length > 0 && (
      <ul class="c-interview-card__info-tags">
        {positions.map((pos, index) => (
          <li key={index}>
            <span>{pos}</span>
          </li>
        ))}
      </ul>
    )}
  </div>
</div>

<style lang="scss" is:global>
@use '../../../assets/scss/mediaquery' as me;
@use '../../../assets/scss/mixin' as mi;

.c-interview-card {
  display: grid;
  row-gap: 12px;

  @include me.pc {
    &.mouse-over {
      &:hover {
        .c-interview-card__thumb {
          // 各辺から10px内側にクリップ（360px → 340px相当）
          clip-path: inset(3px);
        }

        .c-interview-card__thumb img {
          // 画像自体を拡大（360px → 368px相当）
          transform: scale(1.0222); // 368/360 = 1.0222
        }
      }
    }
  }

  &__thumb {
    display: block;
    aspect-ratio: 340 / 192;
    clip-path: inset(0px);
    transition: clip-path 0.3s cubic-bezier(0, 0, 0.17, 1);

    img {
      transition: transform 0.3s cubic-bezier(0, 0, 0.17, 1);
    }
  }

  &__info {
    display: grid;
    row-gap: 10px;

    &-title {
      a {
        color: var(--c-white);
        font-size: 1.6rem;
        font-weight: 600;
        line-height: 1.7;
      }
    }

    &-staff {
      color: var(--c-white);
      font-size: 1.6rem;
      font-weight: 600;
      line-height: 1.7;
    }

    &-tags {
      display: flex;
      column-gap: 8px;

      li {
        display: flex;
        column-gap: 8px;
        color: rgba($color: #AAAAAA, $alpha: 0.9);
        font-size: 1.4rem;
        font-weight: 700;

        &:not(:last-child) {
          &::after {
            content: "/";
          }
        }

        a, span {
          color: rgba($color: #AAAAAA, $alpha: 0.9);
        }
      }
    }
  }
}

</style>
