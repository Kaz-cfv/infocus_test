---
interface Props {
  title: string;
  image?: string;
  name: string;
  position: string;
  url: string;
}

const { title, image, name, position, url } = Astro.props;

// ポジションを配列に分割（複数ポジションがスラッシュ区切りの場合）
const positions = position ? position.split('/').map(p => p.trim()) : [];
---

<div class="c-interview-card">
  <a href={url} target="_blank" rel="noopener noreferrer" class="c-interview-card__thumb">
    <figure>
      <img src={image} alt={title}>
    </figure>
  </a>
  <div class="c-interview-card__info">
    <div class="c-interview-card__info-title">{title}</div>
    {name && (
      <span class="c-interview-card__info-staff">{name}</span>
    )}
    {positions.length > 0 && (
      <ul class="c-interview-card__info-tags">
        {positions.map((pos, index) => (
          <li key={index}>
            <span>{pos}</span>
          </li>
        ))}
      </ul>
    )}
  </div>
</div>

<style lang="scss">
@use '../../../assets/scss/mediaquery' as me;
@use '../../../assets/scss/mixin' as mi;

.c-interview-card {
  display: grid;
  row-gap: 12px;

  &__thumb {
    display: block;
    aspect-ratio: 340 / 192;
  }

  &__info {
    display: grid;
    row-gap: 10px;

    &-title {
      color: var(--c-white);
      font-size: 1.6rem;
      font-weight: 600;
      line-height: 1.7;
    }

    &-staff {
      color: var(--c-white);
      font-size: 1.6rem;
      font-weight: 600;
      line-height: 1.7;
    }

    &-tags {
      display: flex;
      column-gap: 8px;

      li {
        display: flex;
        column-gap: 8px;
        color: rgba($color: #AAAAAA, $alpha: 0.9);
        font-size: 1.4rem;
        font-weight: 700;

        &:not(:last-child) {
          &::after {
            content: "/";
          }
        }

        a, span {
          color: rgba($color: #AAAAAA, $alpha: 0.9);
        }
      }
    }
  }
}

</style>
