---
interface Props {
  title: string;
  subtitle?: string;
  value: string | number;
  unit?: string;
  description?: string;
  type?: 'number' | 'ratio' | 'default';
}

const { title, subtitle, value, unit, description, type = 'default' } = Astro.props;
---

<div class="c-stat-card">
  <h3 class="c-stat-card__title">
    {title}
    {subtitle && (
      <span class="c-stat-card__subtitle">{subtitle}</span>
    )}
  </h3>
  <div class="c-stat-card__content">
    <div class="c-stat-card__value" data-type={type}>
      <span class="c-stat-card__number">{value}</span>
      {unit && <span class="c-stat-card__unit">{unit}</span>}
    </div>
    {description && (
      <div class="c-stat-card__description" set:html={description} />
    )}
  </div>
</div>

<style lang="scss">
@use '../../../assets/scss/mediaquery' as me;
@use '../../../assets/scss/mixin' as mi;

.c-stat-card {
  &__title {
    font-family: var(--f-jp);
    font-size: 1.6rem;
    font-weight: 700;
    line-height: 0.96;
    @include me.sp {
      line-height: 1.6;
      text-align: center;
    }
  }

  &__subtitle {
    font-size: 1.6rem;
    font-weight: 700;
    @include me.sp {
      display: block;
    }
  }

  &__content {
    margin-top: 50px;
    @include me.pc {
      max-width: 145px;
      margin-inline: auto;
    }
    @include me.sp {
      margin-top: 24px;
    }
  }

  &__value {
    display: flex;
    align-items: baseline;
    justify-content: center;
    column-gap: 8px;

    // 数値タイプ
    &[data-type="number"] {
      .c-stat-card__number {
        font-family: var(--f-en);
        font-size: 9rem;
        font-weight: 600;
        line-height: 0.96;

        @include me.sp {
          font-size: 8rem;
        }
      }

      .c-stat-card__unit {
        font-family: var(--f-jp);
        font-size: 2rem;
        font-weight: 700;
        line-height: 0.96;
        letter-spacing: -0.02em;

        @include me.sp {
          font-size: 1.6rem;
        }
      }
    }

    // 比率タイプ
    &[data-type="ratio"] {
      .c-stat-card__number {
        font-family: var(--f-en);
        font-size: 9rem;
        font-weight: 600;
        line-height: 0.96;
        letter-spacing: 0.1em;
        @include me.sp {
          font-size: 8rem;
        }
      }
    }
  }

  &__description {
    margin-block-start: 16px;
    display: flex;
    justify-content: space-around;
    gap: 20px;
    font-family: var(--f-jp);
    font-size: 1.4rem;
    font-weight: 400;
    line-height: 0.96;
    letter-spacing: -0.02em;
    text-align: center;
    @include me.sp {
      font-size: 1.2rem;
    }
  }
}
</style>
