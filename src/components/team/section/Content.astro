---
interface Props {
  teamMembers: any[];
}

const { teamMembers } = Astro.props;

// チームメンバーのデータを整形
interface TeamMember {
  id: number;
  name: string;
  pic: string;
  picMediumLarge: string;
  picLarge: string;
  url: string;
  positionSlugs: string[];
  tags: Array<{
    name: string;
    url: string;
    slug: string;
    isPosition?: boolean;
  }>;
}

// 現在の言語を検出
const isEnglish = Astro.url.pathname.includes('/en/');
const currentLanguage = isEnglish ? 'en' : 'ja';

// 言語に応じたURLを生成
const getLocalizedTeamURL = (slug: string) => {
  return isEnglish ? `/en/team/${slug}/` : `/team/${slug}/`;
};

const getPositionFilterURL = (positionSlug: string) => {
  return isEnglish ? `/en/team/?position=${positionSlug}` : `/team/?position=${positionSlug}`;
};

const formattedMembers: TeamMember[] = teamMembers.map((member: any) => {
  const tags = [];
  const positionSlugs: string[] = [];

  // position-tagからポジション情報を取得（表示もフィルタリングもこれを使用）
  const positionTag = member.acfs?.['position-tag'];

  if (positionTag) {
    const tagArray = Array.isArray(positionTag) ? positionTag : [positionTag];

    tagArray.forEach((tag: any) => {
      if (tag?.slug && tag?.name) {
        positionSlugs.push(tag.slug);
        // 各ポジションを個別のタグとして追加
        tags.push({
          name: tag.name,
          slug: tag.slug,
        url: getPositionFilterURL(tag.slug),
        isPosition: true
      });
      }
    });
  }

  // 画像URLの取得（レスポンシブ対応）
  const picFallback = member.acfs?.thumbnail?.url || '';
  const picMediumLarge = member.acfs?.thumbnail?.image?.sizes?.medium_large || picFallback;
  const picLarge = member.acfs?.thumbnail?.image?.sizes?.large || picFallback;

  return {
    id: member.id,
    name: member.title || '',
    pic: picFallback,
    picMediumLarge,
    picLarge,
    url: member.slug ? getLocalizedTeamURL(member.slug) : '#',
    positionSlugs: positionSlugs.filter(slug => slug),
    tags
  }
});
---

<div class="p-team-content" data-main-content>
  <ul class="p-team-content__list" id="teamList">
    {formattedMembers.map((member) => (
      <li
        class="p-team-content__list-item"
        data-item={member.id}
        data-positions={member.positionSlugs.join(',')}
      >
        <div class="c-team-card mouse-over">
          <a href={member.url} class="c-team-card__thumb">
            <picture>
              <source media="(min-width: 960px)" srcset={member.picLarge} />
              <img
                src={member.picMediumLarge}
                alt={member.name}
                loading="lazy"
                decoding="async"
              />
            </picture>
          </a>
          <div class="c-team-card__info">
            <h3 class="c-team-card__name">
              <a href={member.url}>
                {member.name}
              </a>
            </h3>
            <ul class="c-team-card__tags js-hover">
              {member.tags.map((tag, index) => (
                <li class="c-team-card__tags-item js-hover-item">
                  <a href={tag.url}>{tag.name}</a>
                </li>
              ))}
            </ul>
          </div>
        </div>
      </li>
    ))}
  </ul>

  <!-- モバイル用カラムレイアウト -->
  <div class="p-team-content__columns">
    <div class="p-team-content__column" data-column="left"></div>
    <div class="p-team-content__column" data-column="right"></div>
  </div>
</div>

