---
import TeamCard from '../parts/TeamCard.astro';

// スケルトンカードの枚数
const SKELETON_COUNT = 15;
---

<div class="p-team-content" data-main-content>
  <ul class="p-team-content__list" id="teamList">
    {Array.from({ length: SKELETON_COUNT }).map((_, index) => (
      <li class="p-team-content__list-item skeleton-item" data-skeleton="true">
        <div class="c-team-card skeleton">
          <div class="c-team-card__thumb skeleton-shimmer">
          </div>
          <div class="c-team-card__info">
            <div class="skeleton-name skeleton-shimmer"></div>
            <div class="skeleton-tags skeleton-shimmer"></div>
          </div>
        </div>
      </li>
    ))}
  </ul>

  <!-- モバイル用カラムレイアウト -->
  <div class="p-team-content__columns">
    <div class="p-team-content__column" data-column="left"></div>
    <div class="p-team-content__column" data-column="right"></div>
  </div>
</div>

<style lang="scss" is:global>
@use '../../../assets/scss/mediaquery' as me;
@use '../../../assets/scss/mixin' as mi;

.p-team-content {
  margin-block-start: 90px;
  padding-inline: 30px;
  padding-block-end: 107px;
  @include me.sp {
    margin-block-start: 40px;
    padding-inline: 20px;
    padding-block-end: 80px;
  }

  &__list {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    column-gap: 25px;
    row-gap: 50px;
    @include me.sp {
      grid-template-columns: repeat(2, 1fr);
      column-gap: 16px;
      row-gap: 24px;
    }

    // チームカード出現アニメーション
    &-item {
      // スケルトンアイテムは除外
      &:not(.skeleton-item) {
        opacity: 0;

        // PC版（5カラム）: 奇数番目は下から、偶数番目は上から
        @include me.pc {
          // 奇数番目: 下から出現
          &:nth-child(odd) {
            animation: fadeInFromBottom 0.6s ease-out forwards;
          }

          // 偶数番目: 上から出現
          &:nth-child(even) {
            animation: fadeInFromTop 0.6s ease-out forwards;
          }

          // 順次表示のための遅延
          @for $i from 1 through 100 {
            &:nth-child(#{$i}) {
              animation-delay: #{($i - 1) * 0.05}s;
            }
          }
        }

        // SP版（2カラム）: 2つごとに下・上のパターン
        @include me.sp {
          // 左カラム（1, 3, 5, 7...）: 下から出現
          &:nth-child(2n+1) {
            animation: fadeInFromBottom 0.6s ease-out forwards;
          }

          // 右カラム（2, 4, 6, 8...）: 上から出現
          &:nth-child(2n) {
            animation: fadeInFromTop 0.6s ease-out forwards;
          }

          // 順次表示のための遅延（2カラムなので2で割った商で行を判定）
          @for $i from 1 through 100 {
            &:nth-child(#{$i}) {
              // 行番号を計算（0始まり）
              $row: floor(($i - 1) / 2);
              // 列番号を計算（0: 左, 1: 右）
              $col: ($i - 1) % 2;
              // 行ごとに0.1秒、列ごとに0.05秒の遅延
              animation-delay: #{$row * 0.1 + $col * 0.05}s;
            }
          }
        }
      }
    }
  }

  &__columns {
    display: none;
    @include me.sp {
      column-gap: 20px;
      align-items: flex-start;
    }
  }

  &__column {
    flex: 1;
    display: flex;
    flex-direction: column;
    row-gap: 50px;

    // モバイル用カラムレイアウトのアニメーション
    .p-team-content__list-item {
      &:not(.skeleton-item) {
        opacity: 0;
      }
    }

    // 左カラム: 全て下から出現
    &[data-column="left"] {
      .p-team-content__list-item:not(.skeleton-item) {
        animation: fadeInFromBottom 0.6s ease-out forwards;

        // 順次表示のための遅延
        @for $i from 1 through 50 {
          &:nth-child(#{$i}) {
            animation-delay: #{($i - 1) * 0.1}s;
          }
        }
      }
    }

    // 右カラム: 全て上から出現
    &[data-column="right"] {
      .p-team-content__list-item:not(.skeleton-item) {
        animation: fadeInFromTop 0.6s ease-out forwards;

        // 順次表示のための遅延
        @for $i from 1 through 50 {
          &:nth-child(#{$i}) {
            animation-delay: #{($i - 1) * 0.1}s;
          }
        }
      }
    }
  }
}

// 下から出現するアニメーション
@keyframes fadeInFromBottom {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

// 上から出現するアニメーション
@keyframes fadeInFromTop {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

// ★ スケルトンカードのスタイル
.skeleton-item {
  pointer-events: none;
  user-select: none;
}

.c-team-card.skeleton {
  .c-team-card__thumb {
    aspect-ratio: 1 / 1;
    background: #1a1a1a;
    border-radius: 0;

    &.skeleton-shimmer {
      position: relative;
      overflow: hidden;

      &::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(
          90deg,
          transparent 0%,
          rgba(255, 255, 255, 0.03) 50%,
          transparent 100%
        );
        animation: shimmer 1.5s infinite;
      }
    }
  }

  .c-team-card__info {
    row-gap: 18px;
  }
}

.skeleton-name {
  height: 1.8rem;
  width: 70%;
  background: #1a1a1a;
  border-radius: 4px;
}

.skeleton-tags {
  height: 1.2rem;
  width: 50%;
  background: #1a1a1a;
  border-radius: 4px;
}

@keyframes shimmer {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

// フェードアウトアニメーション
@keyframes skeleton-fade-out {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}

.skeleton-item.fade-out {
  animation: skeleton-fade-out 0.3s ease-out forwards;
}

.c-team-card {
  display: grid;
  grid-template-columns: 100%;
  align-content: flex-start;
  row-gap: 18px;

  @include me.pc {
    &.mouse-over {
      &:hover {
        .c-team-card__thumb {
          clip-path: inset(7px);
        }

        .c-team-card__thumb img {
          // transform: scale(1.0222);
        }
      }
    }
  }

  &__thumb {
    display: block;
    clip-path: inset(0px);
    transition: clip-path .4s cubic-bezier(0.16, 1.02, 0.52, 1.03);

    img {
      transition: transform 0.3s cubic-bezier(0, 0, 0.17, 1);
    }
    picture {
      display: block;
      width: 100%;
      height: 100%;
    }
  }

  &__info {
    display: grid;
    grid-template-columns: 100%;
    align-content: flex-start;
    row-gap: 22px;
    @include me.sp {
      row-gap: 12px;
    }
  }

  &__name {
    font-size: 1.8rem;
    font-weight: 600;
    line-height: 0.78;
    letter-spacing: .02rem;

    a {
      color: var(--c-white);
    }
  }

  &__tags {
    display: flex;
    flex-wrap: wrap;
    column-gap: 4px;
    row-gap: 8px;

    &-item {
      display: flex;
      align-items: center;
      column-gap: 4px;
      color: var(--c-gray);
      font-size: 1.2rem;
      font-weight: 700;
      line-height: 0.80;
      &::after {
        content: "/";
        display: inline-block;
      }
      &:last-child {
        &::after {
          display: none;
        }
      }

      a {
        color: var(--c-gray);
        font-size: 1.2rem;
        font-weight: 700;
        line-height: 0.80;
      }
    }
  }
}
</style>
