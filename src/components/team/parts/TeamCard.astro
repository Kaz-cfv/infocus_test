---
interface Tags {
  name: string;
  url: string;
  isPosition?: boolean;
}

interface Props {
  id: number;
  name: string;
  pic: string;
  url: string;
  tags: Tags[];
}

const { id, name, pic, url, tags } = Astro.props;
---

<div class="c-team-card mouse-over">
  <a href={url} class="c-team-card__thumb">
    <img src={pic} alt={name}>
  </a>
  <div class="c-team-card__info">
    <h3 class="c-team-card__name">
      <a href={url}>
        {name}
      </a>
    </h3>
    <ul class="c-team-card__tags js-hover">
      {tags.map((tag) => (
        <li class="c-team-card__tags-item js-hover-item">
          {tag.isPosition ? (
            <p>{tag.name}</p>
          ) : tag.url && tag.url !== "#" && tag.url !== '' ? (
            <a href={tag.url}>{tag.name}</a>
          ) : (
            <span>{tag.name}</span>
          )}
        </li>
      ))}
    </ul>
  </div>
</div>

<style lang="scss">
@use '../../../assets/scss/mediaquery' as me;
@use '../../../assets/scss/mixin' as mi;

.c-team-card {
  display: grid;
  grid-template-columns: 100%;
  align-content: flex-start;
  row-gap: 18px;

  @include me.pc {
    &.mouse-over {
      &:hover {
        .c-team-card__thumb {
          // 各辺から10px内側にクリップ（360px → 340px相当）
          clip-path: inset(7px);
        }

        .c-team-card__thumb img {
          // 画像自体を拡大（360px → 368px相当）
          // transform: scale(1.0222); // 368/360 = 1.0222
        }
      }
    }
  }

  &__thumb {
    display: block;
    clip-path: inset(0px);
    transition: clip-path .4s cubic-bezier(0.16, 1.02, 0.52, 1.03);

    img {
      transition: transform 0.3s cubic-bezier(0, 0, 0.17, 1);
    }
  }

  &__info {
    display: grid;
    grid-template-columns: 100%;
    align-content: flex-start;
    row-gap: 22px;
    @include me.sp {
      row-gap: 12px;
    }
  }

  &__name {
    font-size: 1.4rem;
    font-weight: 600;
    line-height: 1.3;
    letter-spacing: .02rem;

    a {
      color: var(--c-white);
    }
  }

  &__tags {
    display: flex;
    flex-wrap: wrap;
    column-gap: 4px;
    row-gap: 8px;

    &-item {
      display: flex;
      align-items: center;
      column-gap: 4px;
      color: var(--c-gray);
      font-size: 1.2rem;
      font-weight: 700;
      line-height: 0.80;
      &::after {
        content: "/";
        display: inline-block;
      }
      &:last-child {
        &::after {
          display: none;
        }
      }

      a {
        color: var(--c-gray);
        font-size: 1.2rem;
        font-weight: 700;
        line-height: 0.80;
      }
    }
  }
}
</style>
