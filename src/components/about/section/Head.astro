---
import InfoList from '../parts/InfoList.astro';

interface Props {
  lang?: 'en' | 'ja'
}
const { lang = 'ja' } = Astro.props;

// 言語別のテキスト定義
const texts = {
  ja: {
    title: 'A digital branding studio<br>In Tokyo and New York',
    description: 'IN FOCUSは、東京とニューヨークを拠点に活動するデジタルブランディングスタジオです。<br>多様な専門性を持つメンバーが企業やブランドの核にあるストーリーや独自性をコンセプトに、Web、映像、グラフィック、写真といった領域を横断し、新しい視点を提案します。'
  },
  en: {
    title: 'A digital branding studio<br>In Tokyo and New York',
    description: 'IN FOCUS is a digital branding studio based in Tokyo and New York.<br>Our diverse team of specialists work seamlessly between web, video, graphic, and photography disciplines to bring fresh perspectives to the core elements of our clients’ businesses—strengthening and expanding their brands, particularly across vital digital touchpoints.'
  }
};

const info = {
  company: {
    slug: 'company',
    caption: 'COMPANY',
    list: [
      {
        text: lang === 'ja' ? 'IN FOCUS株式会社' : 'IN FOCUS Inc.',
      },
    ]
  },
  ceo: {
    slug: 'ceo',
    caption: 'CEO',
    list: [
      {
        text: lang === 'ja' ? '井口 忠正' : 'Tadamasa Iguchi',
      },
    ],
  },
  established: {
    slug: 'established',
    caption: 'ESTABLISHED',
    list: [
      {
        text: '2012.03.01',
      },
    ],
  },
  capital: {
    slug: 'capital',
    caption: 'CAPITAL',
    list: [
      {
        text: '¥10,000,000',
      },
    ],
  },
  branding: {
    slug: 'what_we_do',
    caption: 'WHAT WE DO',
    list: [
      {
        text: 'Branding',
      },
      {
        text: 'Strategy',
      },
      {
        text: 'Creative Direction',
      },
      {
        text: 'Art Direction',
      },
    ],
  },
  production: {
    slug: 'production',
    caption: '',
    list: [
      {
        text: 'Photo Direction',
      },
      {
        text: 'Web Design & Development',
      },
      {
        text: 'Film Production',
      },
      {
        text: 'Graphic Design',
      },
    ],
  },
  extras: {
    slug: 'management',
    caption: '',
    list: [
      {
        text: 'Editorial Production',
      },
      {
        text: 'Localization',
      },
      {
        text: 'Social Media Management',
      },
      {
        text: 'Creative Space Management',
      },
    ],
  },
  what_we_do_1: {
    slug: 'what_1',
    caption: 'WHAT WE DO',
    list: [
      {
        text: 'Branding',
      },
      {
        text: 'Strategy',
      },
      {
        text: 'Creative Direction',
      },
      {
        text: 'Art Direction',
      },
      {
        text: 'Photo Direction',
      },
      {
        text: 'Web Design & Development',
      },
    ],
  },
  what_we_do_2: {
    slug: 'what_2',
    caption: '',
    list: [
      {
        text: 'Film Production',
      },
      {
        text: 'Graphic Design',
      },
      {
        text: 'Editorial Production',
      },
      {
        text: 'Localization',
      },
      {
        text: 'Social Media Management',
      },
      {
        text: 'Creative Space Management',
      },
    ],
  },
}

// 現在の言語のテキストを取得
const currentTexts = texts[lang];
---

<section class="p-about-head">
  <h1 class="p-about-head__title" set:html={currentTexts.title} data-lang={lang}></h1>

  <div class="p-about-head__content">
    <p class="p-about-head__content-description" set:html={currentTexts.description} data-lang={lang}></p>
    <figure class="p-about-head__content-pic">
      <img src="/common/images/about/graph.png" alt="">
    </figure>

    <div class="p-about-head__content-info">
      <div class="p-about-head__content-infoItem" data-item={info.company.slug}>
        <InfoList
          caption={info.company.caption}
          list={info.company.list}
        />
      </div>
      <div class="p-about-head__content-infoItem" data-item={info.ceo.slug}>
        <InfoList
          caption={info.ceo.caption}
          list={info.ceo.list}
        />
      </div>
      <div class="p-about-head__content-infoItem" data-item={info.established.slug}>
        <InfoList
          caption={info.established.caption}
          list={info.established.list}
        />
      </div>
      <div class="p-about-head__content-infoItem" data-item={info.capital.slug}>
        <InfoList
          caption={info.capital.caption}
          list={info.capital.list}
        />
      </div>
      <div class="p-about-head__content-infoItem" data-item={info.branding.slug}>
        <InfoList
          caption={info.branding.caption}
          list={info.branding.list}
        />
      </div>
      <div class="p-about-head__content-infoItem" data-item={info.production.slug}>
        <InfoList
          caption={info.production.caption}
          list={info.production.list}
        />
      </div>
      <div class="p-about-head__content-infoItem" data-item={info.extras.slug}>
        <InfoList
          caption={info.extras.caption}
          list={info.extras.list}
        />
      </div>
      <div class="p-about-head__content-infoItem" data-item={info.what_we_do_1.slug}>
        <InfoList
          caption={info.what_we_do_1.caption}
          list={info.what_we_do_1.list}
        />
      </div>
      <div class="p-about-head__content-infoItem" data-item={info.what_we_do_2.slug}>
        <InfoList
          caption={info.what_we_do_2.caption}
          list={info.what_we_do_2.list}
        />
      </div>
    </div>

  </div>
</section>


<style lang="scss" is:global>
@use '../../../assets/scss/mediaquery' as me;
@use '../../../assets/scss/mixin' as mi;

.p-about-head {
  margin-block-start: 80px;
  padding-inline: 30px;
  padding-block-end: 156px;
  @include me.pc {
    max-width: 1440px;
    margin-inline: auto;
  }
  @include me.sp {
    margin-block-start: 60px;
    padding-inline: 20px;
    padding-block-end: 60px;
  }

  &__title {
    font-size: 8.8rem;
    font-weight: 600;
    letter-spacing: -.02rem;
    line-height: 1.35;
    @include me.sp {
      font-size: 2.8rem;
      line-height: 1.4;
    }
  }

  &__content {
    display: grid;
    grid-template-columns: 100%;
    margin-block-start: 40px;
    @include me.pc {
      align-items: flex-end;
      grid-template-columns: 1fr 496px;
      column-gap: 143px;
      row-gap: 80px;
    }
    @media (max-width: 1399px) {
      grid-template-columns: 53.1vw 1fr;
    }
    @media (max-width: 959px) {
      grid-template-columns: 100%;
    }
    @include me.sp {
      row-gap: 60px;
      margin-block-start: 50px;
    }

    &-description {
      font-family: var(--f-jp);
      font-size: 1.6rem;
      line-height: 2;
      @include me.pc {
        max-width: 793px;
      }
      @include me.sp {
        font-size: 1.4rem;
      }
      &[data-lang="en"] {
        font-family: var(--f-en);
      }
    }

    &-pic {
      @include me.pc {
        grid-column: 2;
        grid-row: 1 / 3;
      }
      @include me.sp {
        margin-inline: 12px;
      }
    }

    &-info {
      display: grid;
      @include me.pc {
        grid-template-columns: repeat(4, max-content);
        column-gap: 74px;
        row-gap: 50px;
      }
      @include me.sp {
        grid-template-columns: repeat(2, 1fr);
        column-gap: 11px;
        row-gap: 32px;
      }
    }

  }

  &__content-infoRow {
    @include me.pc {
      display: flex;
    }
    @include me.sp {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      column-gap: 8px;
      row-gap: 32px;
    }
  }

  &__content-infoItem {
    @include me.pc {
      &[data-item="production"] {
        grid-column: 2 / 4;
      }
      &[data-item="what_1"],
      &[data-item="what_2"] {
        display: none;
      }
    }
    @include me.sp {
      &[data-item="what_we_do"],
      &[data-item="production"],
      &[data-item="management"] {
        display: none;
      }
    }
  }
}
</style>
