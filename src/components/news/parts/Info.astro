      display: inline-flex;
      justify-content: center;
      align-items: center;
      width: 12px;
      height: 12px;
    }
  }

  &-switch {
    display: flex;
    gap: 16px;
    margin-block-start: 16px;
    @include me.sp {
      display: none;
    }

    button {
      display: flex;
      justify-content: center;
      align-items: flex-end;
      min-height: 12px;
      color: var(--c-white);
      font-size: 0;
      cursor: pointer;
      &.is-active {
        svg rect {
          fill: var(--c-gray);
