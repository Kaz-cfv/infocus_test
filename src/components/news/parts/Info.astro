<style lang="scss">
@use '../../../assets/scss/mediaquery' as me;
@use '../../../assets/scss/mixin' as mi;

.p-news-info {

  &__title {
    display: flex;
    align-items: center;
    column-gap: 6px;
    margin-block-start: 70px;
    color: var(--c-white);
    font-size: 1.2rem;
    font-weight: 600;
    @include me.sp {
      margin-block-start: 60px;
    }

    &[data-state="false"] {
      display: none;
      opacity: 0;
      visibility: hidden;
      pointer-events: none;
    }

    &-name {

    }

    &-num {

    }

