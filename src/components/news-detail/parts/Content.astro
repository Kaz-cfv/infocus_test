---
const { newsContent } = Astro.props;
---

<div class="c-article">
  {newsContent ? (
    <Fragment set:html={newsContent} />
  ) : (
    <p>記事の内容が見つかりませんでした。</p>
  )}
</div>

<style lang="scss" is:global>
@use '../../../assets/scss/mediaquery' as me;
@use '../../../assets/scss/mixin' as mi;

.c-article {
  font-family: var(--f-jp);
  font-size: 1.6rem;
  line-height: 1.7;
  @include me.sp {
    font-size: 1.4rem;
    line-height: 1.6;
  }

  h2 {
    margin-block-end: 12px;
    font-size: 1.8rem;
    @include me.sp {
      font-size: 1.7rem;
    }
  }

  h3 {
    margin-block-end: 12px;
    font-size: 1.5rem;
    @include me.sp {
      font-size: 1.4rem;
    }
  }

  h4,
  h5,
  h6 {
    font-size: 1.4rem;
    margin-block-end: 12px;
    font-weight: 400;
    line-height: 1.8;
  }

  p {
    margin-block-end: 50px;
    font-size: 1.4rem;
      line-height: 1.8;
  }

  a {
    display: inline-block;
    position: relative;
    margin-block-end: 4px;
    color: var(--c-white);
    @include me.pc {
      &::after {
        content: "";
        position: absolute;
        bottom: 2px;
        left: 0;
        width: 100%;
        height: 1px;
        background-color: var(--c-white);
      }
    }
    @include me.sp {
      text-decoration: underline;
    }
  }

  em,
  i {
    font-style: italic;
  }

  u {
    position: relative;
    text-decoration: none;
    &::after {
      content: "";
      position: absolute;
      bottom: 0;
      left: 0;
      width: 100%;
      height: 1px;
      background-color: var(--c-white);
    }
  }

  figure {
    margin-block-end: 30px;
  }

  figcaption {
    display: inline-block;
    margin-block-start: 20px;
    font-size: 1.2rem;
    line-height: 1.7;
    @include me.sp {
      margin-block-start: 10px;
    }
  }


}

</style>
