<style lang="scss">
@use '../../../assets/scss/mediaquery' as me;
@use '../../../assets/scss/mixin' as mi;

.p-home-kv {
  overflow: hidden;

  &__item {
    position: relative;
    @include me.pc {
      aspect-ratio: 1440 / 563;
      width: 100%;
    }
    @include me.sp {
      aspect-ratio: 4 / 5;
      width: 100%;
    }
  }

  &__video {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
}

