---
interface Props {
  creditData: string;
}

const { creditData } = Astro.props;
---

<div class="p-project-detail__credit">
  <h2 class="p-project-detail__credit-title">CREDITS</h2>
  <div class="p-project-detail__credit-list">
    <div class="p-project-detail__creditTable" set:html={creditData}></div>
  </div>
</div>


<style lang="scss" is:global>
@use '../../../assets/scss/mediaquery' as me;
@use '../../../assets/scss/mixin' as mi;

.p-project-detail__credit {
  @include me.pc {
    margin-inline-start: 116px;
    margin-block-start: 80px;
  }
  @include me.sp {
    margin-block-start: 50px;
  }

  &-title {
    margin-block-end: 40px;
    font-size: 2rem;
    font-weight: 600;
  }

  &-list {
    display: grid;
    grid-template-columns: 100%;
    align-content: flex-start;
    row-gap: 40px;
  }
}

.p-project-detail__creditTable {
  display: grid;
  grid-template-columns: 100%;
  align-content: flex-start;
  row-gap: 40px;

  h3 {
    margin-block-end: 22px;
    font-size: 1.8rem;
  }

  dl {
    display: grid;
    grid-template-columns: 146px 1fr;
    align-content: flex-start;
    column-gap: 60px;
    row-gap: 12px;
    @include me.sp {
      column-gap: 32px;
    }
  }

  dt {
    opacity: .5;
    color: var(--c-white);
    font-size: 1.4rem;
    font-weight: 600;
  }

  dd {
    color: var(--c-white);
    font-size: 1.4rem;
    font-weight: 600;

    a {
      position: relative;
      color: var(--c-white);
      @include me.pc {
        &::after {
          content: "";
          position: absolute;
          bottom: 0;
          left: 0;
          width: 100%;
          height: 1px;
          background-color: var(--c-white);
        }
      }
      @include me.sp {
        text-decoration: underline;
      }
    }
  }
}
</style>
