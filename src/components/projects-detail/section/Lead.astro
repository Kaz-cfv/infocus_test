---
interface Props {
  title: string;
  text: string;
}

const { title, text } = Astro.props;

// 改行をHTMLの<br>タグに変換する
const formattedText = text ? text.replace(/\n/g, '<br>') : '';
---

<div class="c-article__lead">
  <h2 class="c-article__lead-title">{title}</h2>
  <div set:html={formattedText}></div>
</div>


<style lang="scss">
@use '../../../assets/scss/mediaquery' as me;
@use '../../../assets/scss/mixin' as mi;

.c-article__lead {
  @include me.pc {
    // margin-inline: 123px;]
    max-width: 72.41%;
    margin-inline: auto;
    margin-block-start: 70px;
  }

  &-title {
    font-family: var(--f-jp);
    font-size: 1.8rem;
    @include me.sp {
      font-size: 1.6rem;
    }
  }

  div {
    display: grid;
    grid-template-columns: 100%;
    align-content: flex-start;
    row-gap: 20px;
    // margin-block-start: 30px;
    font-family: var(--f-jp);
    font-size: 1.4rem;
    line-height: 1.7;
    @include me.sp {
      font-size: 1.4rem;
    }
  }

  p {
    font-family: var(--f-jp);
    font-size: 1.5rem;
    line-height: 1.7;
    @include me.sp {
      font-size: 1.4rem;
    }
  }

}

</style>
