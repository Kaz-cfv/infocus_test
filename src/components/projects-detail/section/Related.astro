<style lang="scss" is:global>
@use '../../../assets/scss/mediaquery' as me;
@use '../../../assets/scss/mixin' as mi;

.p-project-detail-related {
  border-top: solid 2px var(--c-white);
  @include me.pc {
    border-bottom: solid 2px var(--c-white);
  }

  &__title {
    padding-block: 70px 60px;
    border-bottom: solid 1px var(--c-gray);
    font-size: 2.2rem;
    text-align: center;
    @include me.sp {
      padding-block: 50px;
      font-size: 2rem;
      font-weight: 600;
    }
  }

  &__list {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    align-content: flex-start;
    @include me.sp {
      grid-template-columns: repeat(2, 1fr);
    }

    &-item {
      border-right: solid 1px var(--c-gray);
      @include me.pc {
        &:nth-child(4n) {
          border-right: none;
        }
      }
      @include me.sp {
        border-bottom: solid 1px var(--c-gray);
        &:nth-child(2n) {
          border-right: none;
        }
      }
    }

    .c-project-card {
      padding-block-end: 78px;
      @include me.sp {
        padding-block-end: 32px;
      }

      &__content {
        padding-inline: 30px;
        @include me.sp {
          padding-inline: 16px;
        }
      }
    }
  }

}


</style>
