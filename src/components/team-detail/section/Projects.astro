---
import ProjectCard from "../../ProjectCard.astro";

interface Tag {
  name: string;
  url: string;
}

interface ProjectData {
  id: number;
  title: string;
  tags: Tag[];
  imageSrc: string;
  url: string;
}

interface Props {
  projects?: ProjectData[];
}

const { projects = [] } = Astro.props;
---

{projects.length > 0 && (
  <section class="p-team-detail__project">
    <h2 class="p-team-detail__project-title">MY PROJECTS</h2>
    <ul class="p-team-detail__project-list">
      {projects.map((project) => (
        <li class="p-team-detail__project-item">
          <ProjectCard
            id={project.id}
            title={project.title}
            tags={project.tags}
            imageSrc={project.imageSrc}
            url={project.url}
          />
        </li>
      ))}
    </ul>
  </section>
)}

<style lang="scss" is:global>
@use '../../../assets/scss/mediaquery' as me;
@use '../../../assets/scss/mixin' as mi;

.p-team-detail__project {
  padding-inline: 30px;
  padding-block: 80px 100px;
  border-top: solid 1px var(--c-gray);
  @include me.sp {
    padding-inline: 20px;
    padding-block: 60px;
  }

  &-title {
    font-size: 3.4rem;
    line-height: 0.96;
    letter-spacing: -.02rem;
    @include me.sp {
      font-size: 2.6rem;
    }
  }

  &-list {
    display: grid;
    margin-block-start: 50px;
    @include me.pc {
      grid-template-columns: repeat(5, 1fr);
      column-gap: 30px;
      row-gap: 60px;
    }
    @include me.sp {
      grid-template-columns: repeat(2, 1fr);
      column-gap: 16px;
      row-gap: 24px;
      margin-block-start: 40px;
    }
  }
  .c-project-card {
    &__image-wrapper {
      @include me.sp {
        height: unset;
      }
    }
  }
}
</style>
