---
export interface Props {
  count: number;
}

const { count } = Astro.props;
---
<div class="p-project-info l-content">
  <!-- 未フィルタリング状態（初期状態） -->
  <div class="p-project-info__title" data-state="true" data-filter-type="default">
    <span class="p-project-info__title-name">ALL PROJECTS</span>
    -
    <span class="p-project-info__title-num">({count})</span>
  </div>

  <!-- フィルタリング状態（絞り込み時） -->
  <div class="p-project-info__title js-search-info" data-state="false" data-filter-type="filtered">
    <span class="p-project-info__title-name"></span>
    <a href="/projects/" class="p-project-info__title-back">
      <svg width="11" height="11" viewBox="0 0 11 11" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M9.18328 0.697925L10.1346 1.64926L6.42134 5.36253L10.1346 9.0758L9.18328 10.0271L5.47001 6.31386L1.64933 10.1345L0.697996 9.18321L4.51867 5.36253L0.820748 1.6646L1.77208 0.713269L5.47001 4.41119L9.18328 0.697925Z" fill="white"/></svg>
    </a>
  </div>

  <div class="p-project-info-switch">
    <button class="js-project-info-toggle" data-columns="5">5
      <svg width="17" height="6" viewBox="0 0 17 6" fill="none" xmlns="http://www.w3.org/2000/svg"><rect y="0.000854492" width="2.18" height="6.00006" fill="white"/><rect x="3.5293" y="0.000854492" width="2.18" height="6.00006" fill="white"/><rect x="7.05371" y="0.000854492" width="2.18" height="6.00006" fill="white"/><rect x="10.582" y="0.000854492" width="2.18" height="6.00006" fill="white"/><rect x="14.1104" y="0.000854492" width="2.18" height="6.00006" fill="white"/></svg>
    </button>
    <button class="js-project-info-toggle" data-columns="3">3
      <svg width="17" height="10" viewBox="0 0 17 10" fill="none" xmlns="http://www.w3.org/2000/svg"><rect y="0.572266" width="4.05712" height="9.42868" fill="white"/><rect x="6.11328" y="0.572266" width="4.05712" height="9.42868" fill="white"/><rect x="12.2295" y="0.572266" width="4.05712" height="9.42868" fill="white"/></svg>
    </button>
    <button class="js-project-info-toggle" data-columns="2">2
      <svg width="17" height="12" viewBox="0 0 17 12" fill="none" xmlns="http://www.w3.org/2000/svg"><rect width="6.95173" height="12.001" fill="white"/><rect x="9.33789" width="6.95173" height="12.001" fill="white"/></svg>
    </button>
  </div>
</div>


<style lang="scss">
@use '../../../assets/scss/mediaquery' as me;
@use '../../../assets/scss/mixin' as mi;

.p-project-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-block-start: 72px;
  @include me.sp {
    margin-block-start: 60px;
  }

  &__title {
    display: flex;
    align-items: center;
    column-gap: 6px;
    color: var(--c-white);
    font-size: 1.2rem;
    font-weight: 600;

    &[data-state="false"] {
      display: none;
      opacity: 0;
      visibility: hidden;
      pointer-events: none;
    }

    &-name {

    }

    &-num {

    }

    &-back {
      display: inline-flex;
      justify-content: center;
      align-items: center;
      width: 12px;
      height: 12px;
    }
  }

  &-switch {
    display: flex;
    gap: 16px;
    margin-block-start: 16px;
    @include me.sp {
      display: none;
    }

    button {
      display: flex;
      justify-content: center;
      align-items: flex-end;
      min-height: 12px;
      color: var(--c-white);
      font-size: 0;
      cursor: pointer;
      &.is-active {
        svg rect {
          fill: var(--c-gray);
        }
      }
      svg rect {
        transition: fill .3s var(--ease-out-quad);
      }
    }
  }
}
</style>
